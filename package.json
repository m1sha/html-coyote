{
  "name": "html-coyote",
  "version": "0.0.13",
  "description": "HTML Coyote is a generator static content for creating static HTML sites",
  "main": "./dist/index.js",
  "bin": {
    "coyo": "./cli/cli.js"
  },
  "scripts": {
    "build": "cross-env webpack",
    "cli:run": "node cli/cli.js run",
    "cli:publish": "node cli/cli.js publish",
    "debug:run": "cross-env run=9080 ts-node src/launcher.ts",
    "debug:publish": "cross-env publish=true ts-node src/launcher.ts",
    "test": "npx jest",
    "test:watch": "npx jest --watch"
  },
  "keywords": [
    "HTML",
    "static",
    "site",
    "generator"
  ],
  "author": "m1sha",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/m1sha/html-coyote.git"
  },
  "bugs": {
    "url": "https://github.com/m1sha/html-coyote/issues"
  },
  "homepage": "https://github.com/m1sha/html-coyote",
  "dependencies": {
    "chalk": "~4.1.0",
    "chokidar": "~3.5.1",
    "js-yaml": "~4.0.0",
    "jsdom": "~16.4.0",
    "live-server": "~1.2.1",
    "marked": "~2.0.0",
    "tslib": "^2.1.0",
    "yargs": "~16.2.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/js-yaml": "^4.0.0",
    "@types/jsdom": "^16.2.6",
    "@types/live-server": "^1.2.0",
    "@types/lodash": "^4.14.168",
    "@types/marked": "^1.2.2",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^2.5.2"
  },
  "files": [
    "dist",
    "cli",
    "site"
  ]
}
